@charset "utf-8";
/* CSS Document */

html{ background:#fefefe}


.banner{background:#0081cc; height:600px;}

.banner .banner-cont{width:980px; margin:0 auto;height:600px}

.content{margin:0 auto; width:980px; height:300px}
.content .new{width:420px; float:left; padding-top:25px; margin-right:40px}
.content .new li{line-height:21px}
.content .new li span{float:right}
.content .new li b{font-family:"宋体"; margin-left:-5px}
.content .title{ height:35px; border-bottom:1px #555 solid; line-height:35px; margin-bottom:15px}
.content .title b{ font-size:20px; float:left; margin-right:5px}
.content .title i{font-size:10px; font-style:normal; font-weight:normal; line-height:47px}
.content .title span{float:right; height:28px; margin-top:7px}

.content .exp{width:230px; float:left;padding-top:25px; margin-right:40px}
.content .exp .exp-cont{ background:#ebe9de; height:165px}

.content .team{width:220px; float:left;padding-top:25px; position:relative; height:220px}
.content .team em{position:absolute; display: block; width:38px; height:14px; bottom:0; right:0}
.content .team h3{font-size:16px; padding:15px 0 10px}
.content .team h3 i{font-size:10px; font-style:normal; font-weight:normal; }

