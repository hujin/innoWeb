@charset "utf-8";
/* CSS Document */

.content{padding-top:40px; }
.left{width:640px; float:left;}
.right{width:270px; float:right; padding-top:23px}
.mould{margin-bottom:35px}

.news-list{padding:16px 0; border-bottom:1px #c8c8c8 dashed; padding-left:15px; background:url(../imgs/news/news-icon.png) left 29px no-repeat}
.news-list .title{font-size:18px; font-weight:bold; line-height:35px}
.news-list .title b{ float:right; font-size:14px; font-weight:normal}
.news-list p{font-size:14px; line-height:30px}

.page{padding:40px 0}
.page a{display:block; width:17px; height:17px ; border-radius:2px; float:left; margin:0 5px; background:#000; color:#FFF;  text-align:center; line-height:17px}
.page a:hover{ background:#ff8e20}
.page .hover{ background:#ff8e20}

.mould h3{height:35px; line-height:35px; background:url(../imgs/news/news-icon.png) no-repeat left 12px; color:#f78719; padding-left:15px; font-size:14px; font-weight:bold}
.mould .list{background:url(../imgs/news/h1-line.png) repeat-x top; padding-top:15px}

.news-p{ font-size:14px; line-height:25px}

.news-mag{padding:20px 0}
.news-mag .title{font-size:26px; height:75px}
.news-mag .title p{font-size:12px; margin-top:5px; line-height:24px}
.news-mag .title span{float:right}
.news-mag .title label{display:inline-block; float:left; margin-right:5px}
.news-mag .title a{display:inline-block; width:24px; height:24px; background-image:url(../imgs/news/qzone.png); margin-right:5px}
.news-mag .title .wb-icon{background-position:0 0;}
.news-mag .title .qzone-icon{background-position:-24px 0;}
.news-mag .title .qq-icon{background-position:-48px 0;}
.news-mag .title .sina-icon{background-position:-72px 0;}

.news-cont{padding-top:20px; font-size:14px}
.news-cont h2{padding-bottom:20px;text-indent:30px; }
.news-cont p{text-indent:30px; line-height:28px;padding-bottom:20px;}

.rmtj-h{background:url(../imgs/news/h1-line.png) bottom repeat-x}
.rmtj{width:50%; float:left}
.rmtj-list{font-size:14px; line-height:25px}

.main h1{font-size:32px; height:60px; background:url(../imgs/news/h1-line.png) repeat-x bottom}
.main h1 b{font-weight:normal}
.main h1 i{font-size:14px; font-style:normal}
.main h1 b,i{display:inline-block; margin-left:15px}
.main h1 em{display:inline-block; width:40px; height:40px; background-image: url(../imgs/news/h1-icon.png); float:left; margin-top:5px}
.main h1 .lxwm-icon{ background-position:-40px 0px}
.main h1 .gsdt-icon{ background-position:0px 0px}

.clear{overflow:hidden; clear:both}