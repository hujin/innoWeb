var mongoose =require('mongoose');

var Schema= mongoose.Schema;
var ObjectId=Schema.objectId;

var menuSchema=new Schema({
    menuID:Number,
    name:String,
    url:String,
    child:[{subMenuID:Number,name:String,url:String,status:Number}],
    status:Number
});

var Menu=mongoose.model('Menu',menuSchema);

var productSchema=new Schema({
    moduleID:Number,
    moduleName:String,
    moduleProduct:[
        {
            productID:Number,
            productName:String,
            productFuns:[
                {
                    funID:Number,
                    funName:String,
                    funDesc:String,
                    imgUrl:String,
                    order:Number
                }
            ]
        }
    ]
});

var Product=mongoose.model('Product',productSchema);

var teamSchema=new Schema({
    teamID:Number,
    teamName:String,
    teamDesc:String,
    teamMembers:[
        {
            memID:Number,
            memNickname:String,
            memPosition:String,
            memSign:String,
            memDesc:String,
            memImgUrl:String
        }
    ],
    order:Number
});

var Team=mongoose.model('Team',teamSchema);

var jobSchema=new Schema({
    jobID:Number,
    teamID:Number,
    jobName:String,
    jobSendDate:String,
    jobNum:Number,
    jobReq:String,
    jobEdu:String,
    jobPay:String,
    jobExp:Number,
    jobDesc:String
})

var Job=mongoose.model('Job',jobSchema);

