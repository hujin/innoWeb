var mongoose =require('mongoose');

var Schema= mongoose.Schema;
var ObjectId=Schema.objectId;

var menuSchema=new Schema({
    menuID:Number,
    name:String,
    url:String,
    child:[{subMenuID:Number,name:String,url:String,status:Number}],
    status:Number
});

var Menu=mongoose.model('Menu',menuSchema);

var productSchema=new Schema({
    moduleID:Number,
    moduleName:String,
    moduleProduct:[
        {
            productID:Number,
            productName:String,
            productFuns:[
                {
                    funID:Number,
                    funName:String,
                    funDesc:String,
                    imgUrl:String,
                    order:Number
                }
            ]
        }
    ]
});

var Product=mongoose.model('Product',productSchema);

var teamSchema=new Schema({
    teamID:Number,
    teamName:String,
    teamDesc:String,
    teamMembers:[
        {
            memID:Number,
            memNickname:String,
            memPosition:String,
            memSign:String,
            memDesc:String,
            memImgUrl:String
        }
    ],
    order:Number
});

var Team=mongoose.model('Team',teamSchema);

var jobSchema=new Schema({
    jobID:Number,
    teamID:Number,
    jobName:String,
    jobSendDate:String,
    jobNum:Number,
    jobReq:String,
    jobEdu:String,
    jobPay:String,
    jobExp:Number,
    jobDesc:String
});

var Job=mongoose.model('Job',jobSchema);

var newSchema = new Schema({
    newID:Number,
    title:String,
    type:Number,
    typeName:String,
    date:{type:Date,default:Date.now},
    summary:String,
    content:String,
    visitCount:Number,
    addUser:String
});

var News=mongoose.model('News',newSchema);

exports.portal = function(req, res){
    Menu.find({status:1},null,{sort: {menuID: 1}},function(err,docs){
        News.find(null,null,{sort: {date: -1},skip:0,limit :6},function(err,hotNewsList){
            res.render('portal', { title:'久拓|innosoft|久拓软件',
                newsData:hotNewsList,
                menus:docs
            });
        });
    });

};


