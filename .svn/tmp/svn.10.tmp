div(class='mould')
    h3 热门推荐
    div(class='list')
        ul(class='rmtj')
            each val,index in hotNewsList
                if(index%2==0)
                    li(class='rmtj-list') ·
                        a(href='newshtml?id='+val.newID)=val.title
        ul
            each val,index in hotNewsList
                if(index%2==1)
                    li(class='rmtj-list') ·
                        a(href='newshtml?id='+val.newID)=val.title